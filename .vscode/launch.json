    "version": "0.2.0",
    "configurations": [  
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (Linux) executable 'text_adventure'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=text_adventure",
                    "--package=text_adventure"
                ],
                "filter": {
                    "name": "text_adventure",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"            
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (Linux) unit tests in executable 'text_adventure'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=text_adventure",
                    "--package=text_adventure"
                ],
                "filter": {
                    "name": "text_adventure",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}